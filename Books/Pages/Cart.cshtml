@page
@model Books.Pages.CartModel
@{
}

<h2>Your Cart:</h2>

<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>Item</th>
            <th>Quantiy</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thread>

    <tbody>
        @foreach (var x in Model.Basket.Items)
        {
            <tr>
                <td>@x.Book.Title</td>
                <td>@x.Quantity</td>
                <td>@x.Book.Price</td>
                <td>@(x.Quantity * x.Book.Price)</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.Basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>